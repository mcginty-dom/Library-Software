                              <Image url="@../../res/images/ui/star_empty.png" />
                           </image>
                           <effect>
                              <DropShadow height="5.0" offsetX="1.0" offsetY="1.0" radius="2.0" width="5.0" />
                           </effect>
                        </ImageView>
                        <ImageView fx:id="star3" fitHeight="20.0" fitWidth="20.0" layoutX="109.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../res/images/ui/star_empty.png" />
                           </image>
                           <effect>
                              <DropShadow height="5.0" offsetX="1.0" offsetY="1.0" radius="2.0" width="5.0" />
                           </effect>
                        </ImageView>
                        <ImageView fx:id="star4" fitHeight="20.0" fitWidth="20.0" layoutX="129.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../res/images/ui/star_empty.png" />
                           </image>
                           <effect>
                              <DropShadow height="5.0" offsetX="1.0" offsetY="1.0" radius="2.0" width="5.0" />
                           </effect>
                        </ImageView>
                        <Label fx:id="noRatingLabel" text="No Ratings" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </left>
      </BorderPane>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <effect>
      <InnerShadow color="WHITE" offsetX="3.0" offsetY="3.0">
         <input>
            <InnerShadow color="#00000080" offsetX="-3.0" offsetY="-3.0" />
         </input>
      </InnerShadow>
   </effect>
</HBox>
