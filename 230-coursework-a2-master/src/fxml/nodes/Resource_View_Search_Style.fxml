            <VBox BorderPane.alignment="TOP_LEFT">
               <children>
                  <Label fx:id="resourceYear" text="ERROR RETRIEVING YEAR">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <HBox alignment="TOP_RIGHT" spacing="10.0">
                     <children>
                        <Label fx:id="resourceType" text="ERROR RETRIEVING TYPE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="resourceID" text="ERROR RETRIEVING ID">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
         <top>
            <Label fx:id="resourceTitle" maxHeight="200.0" text="ERROR RETRIEVING TITLE" wrapText="true" BorderPane.alignment="TOP_LEFT">
               <font>
                  <Font size="20.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </BorderPane.margin>
            </Label>
         </top>
      </BorderPane>
      <Separator layoutX="356.0" layoutY="10.0" orientation="VERTICAL" />
      <BorderPane maxWidth="-Infinity" minWidth="-Infinity" prefWidth="175.0">
         <center>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Minimum Loan Duration" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="resourceMinimumLoanDuration" text="ERROR RETRIEVING LOAN DURATION">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
      </BorderPane>
      <Separator orientation="VERTICAL" />
      <BorderPane maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0">
         <left>
            <GridPane hgap="10.0" vgap="5.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Copies in library:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Copies available:" GridPane.rowIndex="1">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="copiesInLibraryLabel" text="(#Error)" GridPane.columnIndex="1">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="copiesAvailableLabel" text="(#Error)" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="Average User Rating:" GridPane.rowIndex="2">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <ImageView fx:id="star0" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../res/images/ui/star_empty.png" />
                           </image>
                           <effect>
                              <DropShadow height="5.0" offsetX="1.0" offsetY="1.0" radius="2.0" width="5.0" />
                           </effect>
                        </ImageView>
                        <ImageView fx:id="star1" fitHeight="20.0" fitWidth="20.0" layoutX="10.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../res/images/ui/star_empty.png" />
                           </image>
                           <effect>
                              <DropShadow height="5.0" offsetX="1.0" offsetY="1.0" radius="2.0" width="5.0" />
                           </effect>
                        </ImageView>
                        <ImageView fx:id="star2" fitHeight="20.0" fitWidth="20.0" layoutX="89.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
