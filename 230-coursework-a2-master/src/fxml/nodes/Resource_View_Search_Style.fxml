<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #dddddd;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.Nodes.ResourceViewer">
   <children>
      <VBox alignment="CENTER" minHeight="90.0" minWidth="90.0">
         <children>
            <ImageView fx:id="resourceThumbnail" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../res/images/ui/exclamation-mark.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <BorderPane maxWidth="-Infinity" minWidth="-Infinity" prefWidth="450.0">
