<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.Control.AvatarSelectPageController">
   <center>
      <TabPane fx:id="avatarTabPane">
         <tabs>
            <Tab fx:id="systemAvatarsTab" closable="false" text="System Avatars">
               <content>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true">
                     <content>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                           <children>
                              <TilePane fx:id="systemAvatarsPane" hgap="10.0" vgap="10.0" />
                           </children>
                        </VBox>
                     </content>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </ScrollPane>
               </content>
            </Tab>
            <Tab fx:id="emojiTab" closable="false" text="Emoji">
               <content>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true">
                     <content>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                           <children>
                              <TilePane fx:id="emojiPane" hgap="10.0" vgap="10.0" />
                           </children>
                        </VBox>
                     </content>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </ScrollPane>
               </content>
            </Tab>
            <Tab fx:id="customAvatarTab" closable="false" text="Custom Avatars">
               <content>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true">
                     <content>
                        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                           <children>
                              <TilePane fx:id="customAvatarPane" hgap="10.0" vgap="10.0" />
                              <Label fx:id="noImagesAvailable" text="No Images Available" />
                           </children>
                        </VBox>
                     </content>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </ScrollPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <right>
            <HBox alignment="BOTTOM_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="useImageButton" cancelButton="true" defaultButton="true" mnemonicParsing="false" onAction="#handleUseImage" text="Use Image">
                     <tooltip>
                        <Tooltip text="Use selected image" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#handleNewImage" text="New Image">
                     <tooltip>
                        <Tooltip text="Open paint program" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#handleLoadImage" text="Load Image">
                     <tooltip>
                        <Tooltip text="Load image(s) from file" />
                     </tooltip></Button>
                  <Button layoutX="179.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
                     <tooltip>
                        <Tooltip text="Return to account creation" />
                     </tooltip></Button>
               </children>
            </HBox>
         </right>
         <center>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <Label text="Image Size" />
                  <Slider fx:id="sizeSlider" majorTickUnit="50.0" max="400.0" maxWidth="300.0" min="25.0" minorTickCount="2" showTickMarks="true" snapToTicks="true" value="100.0" HBox.hgrow="SOMETIMES">
                     <tooltip>
                        <Tooltip text="View image scale" />
                     </tooltip></Slider>
                  <Label fx:id="sizeSliderLabel" minWidth="30.0" text="100%" />
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
         </center>
      </BorderPane>
   </bottom>
</BorderPane>
