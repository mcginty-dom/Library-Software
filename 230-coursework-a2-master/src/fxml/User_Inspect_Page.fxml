<BorderPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.Control.UserInspectController">
   <center>
      <Accordion prefHeight="400.0" prefWidth="600.0">
        <panes>
          <TitledPane fx:id="infoTitle" alignment="TOP_LEFT" text="Info">
               <content>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                     <content>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <VBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox spacing="20.0">
                                       <children>
                                          <VBox alignment="TOP_CENTER" minHeight="150.0" minWidth="150.0">
                                             <children>
                                                <StackPane>
                                                   <children>
                                                      <ImageView fx:id="userThumbnail" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../res/images/ui/avatar_icon.png" />
                                                         </image>
                                                      </ImageView>
                                                      <ImageView fx:id="editThumbnailIcon" fitHeight="75.0" fitWidth="75.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                                         <image>
                                                            <Image url="@../res/images/ui/pencil_icon.png" />
                                                         </image>
                                                      </ImageView>
                                                   </children>
                                                </StackPane>
                                             </children>
                                          </VBox>
                                          <VBox>
                                             <children>
                                                <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" text="Username" textAlignment="CENTER" wrapText="true">
                                                   <font>
                                                      <Font size="32.0" />
                                                   </font>
                                                </Label>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                   <children>
                                                      <Label fx:id="librarianLabel" alignment="CENTER_RIGHT" text="Librarian" textAlignment="CENTER" wrapText="true">
                                                         <font>
                                                            <Font name="System Italic" size="24.0" />
                                                         </font>
                                                      </Label>
                                                      <Button fx:id="changeStatusButton" mnemonicParsing="false" text="Revoke Status" />
                                                   </children>
                                                </HBox>
                                                <HBox spacing="15.0">
                                                   <children>
                                                      <Label alignment="CENTER_RIGHT" text="Account Balance" textAlignment="CENTER">
                                                         <font>
                                                            <Font size="16.0" />
                                                         </font>
                                                      </Label>
                                                      <TextField fx:id="accountBalanceField" disable="true" editable="false" text="-Â£100.00" />
                                                   </children>
                                                </HBox>
                                                <Button fx:id="makePaymentButton" mnemonicParsing="false" onAction="#handleMakePayment" text="Make Payment" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    <GridPane fx:id="infoDisplayGrid" hgap="20.0" vgap="20.0">
                                      <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="-Infinity" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="-Infinity" />
                                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
                                      </columnConstraints>
                                      <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                      </rowConstraints>
                                       <VBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </VBox.margin>
                                       <children>
                                          <Label text="First Name">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="10.0" text="Last Name" GridPane.columnIndex="2">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="10.0" text="Email Address" GridPane.rowIndex="1">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="40.0" text="Phone Number" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="40.0" text="Address Line 1" GridPane.rowIndex="2">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="70.0" text="Address Line 2" GridPane.rowIndex="3">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="100.0" text="Town" GridPane.rowIndex="4">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="67.0" layoutY="130.0" text="Postcode" GridPane.columnIndex="2" GridPane.rowIndex="4">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="67.0" layoutY="170.0" text="User since" GridPane.rowIndex="5">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </GridPane>
                                    <GridPane fx:id="librarianInfoDisplayGrid" hgap="20.0" layoutX="40.0" layoutY="200.0" vgap="20.0">
                                       <columnConstraints>
                                          <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="-Infinity" />
                                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="-Infinity" />
                                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                       </rowConstraints>
                                       <children>
                                          <Label text="Staff Number">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                          <Label layoutX="10.0" layoutY="10.0" text="Employment Date" GridPane.columnIndex="2">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                       </VBox.margin>
                                    </GridPane>
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </HBox>
                     </content>
                  </ScrollPane>
               </content>
            </TitledPane>
          <TitledPane fx:id="copiesTitle" alignment="TOP_LEFT" text="Open Transactions">
               <content>
                  <TableView fx:id="openTransactionsTable">
                    <columns>
                      <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title" />
                        <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
                      <TableColumn fx:id="startDateColumn" prefWidth="75.0" text="Start Date" />
                        <TableColumn fx:id="dueDateColumn" prefWidth="75.0" text="Due Date" />
                        <TableColumn fx:id="overdueColumn" prefWidth="75.0" text="Overdue" />
                        <TableColumn fx:id="returnColumn" prefWidth="75.0" text="Return/Cancel" />
                    </columns>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </TableView>
               </content>
            </TitledPane>
        </panes>
      </Accordion>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <ToggleButton fx:id="enableEditingButton" mnemonicParsing="false" onAction="#onEnableEditing" text="Enable Editing" />
               </children>
            </HBox>
            <Button cancelButton="true" layoutX="555.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleExitButton" text="Exit" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
