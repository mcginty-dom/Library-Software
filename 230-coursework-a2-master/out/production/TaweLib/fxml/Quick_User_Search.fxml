<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane minHeight="200.0" minWidth="350.0" prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.Control.QuickUserSearchController">
   <center>
      <VBox>
         <children>
            <HBox>
               <children>
                  <TextField fx:id="searchBar" promptText="Enter a USERNAME..." HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <ListView fx:id="listOfNames" />
            <Label fx:id="issueButtonTooltipWrapper" maxWidth="1.7976931348623157E308">
               <graphic>
                  <Button fx:id="issueButton" defaultButton="true" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#issueResource" text="Select a user to issue">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </graphic>
            </Label>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</BorderPane>
